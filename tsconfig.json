{
  "compileOnSave": false,
  "exclude": [
    "**/public_api.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@lib/form": [
        "dist/lib/form"
      ],
      "@lib/form/*": [
        "dist/lib/form/*"
      ],
      "@lib/components": [
        "dist/lib/components"
      ],
      "@lib/components/*": [
        "dist/lib/components/*"
      ],
      "@lib/helpers": [
        "dist/lib/helpers"
      ],
      "@lib/helpers/*": [
        "dist/lib/helpers/*"
      ],
      "interfaces": [
        "dist/lib/interfaces"
      ],
      "interfaces/*": [
        "dist/lib/interfaces/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}